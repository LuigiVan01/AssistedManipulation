{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Windows",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/install/bin/test.exe",
            "args": ["--test", "circle", "--out", "${workspaceFolder}/results/reach"],
            "environment": [
                {
                    "name": "RAISIM_ACTIVATION",
                    "value": "${workspaceFolder}\\activation.raisim"
                }
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/install/bin",
            "console": "integratedTerminal",
            "preLaunchTask": "Compile",
        },
        {
            "name": "Debug Linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/install/bin/test",
            "args": ["--test", "reach", "--out", "${workspaceFolder}/results/reach"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "preLaunchTask": "Compile",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
