{
    // Change this to point to a project to build and debug. This setting is
    // used in the Compile task to set the source folder.
    "user_build_target": "${workspaceFolder}/src",

    // Set to command prompt for windows.
    "terminal.integrated.defaultProfile.windows": "Command Prompt",

    // Extension configuration.
    "cmake.configureOnOpen": false,
    "C_Cpp.autoAddFileAssociations": false,
    "editor.rulers": [80, 120]
}
