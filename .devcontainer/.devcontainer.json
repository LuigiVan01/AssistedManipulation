// https://aka.ms/devcontainer.json
// https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
	"name": "ROS2 Development Environment",
	"build": {
		"dockerfile": "dockerfile",
		"args": {}
	},
	"runArgs": [
		"--cap-add=SYS_PTRACE", 
		"--security-opt",
		"seccomp=unconfined",
		"--privileged",
		"--network=host"
	],
	"mounts": [
		"source=/dev,target=/dev,type=bind",
		"source=/opt,target=/opt,type=bind",
		"source=/tmp/.X11-unix,target=/tmp/.X11-unix" // Forward windows on ubuntu.
	],
	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}" // Set display id for forwarding windows.
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=/root/${localWorkspaceFolderBasename},type=bind,consistency=cached",
	"workspaceFolder": "/root/${localWorkspaceFolderBasename}",
	"postCreateCommand": "gcc -v",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cmake-tools"
			]
		}
	}
}

// For ubuntu:
//   Run xhost local:docker locally to allow docker to access Xorg server.
